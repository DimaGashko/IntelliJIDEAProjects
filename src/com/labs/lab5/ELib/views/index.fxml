<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="wrapper" stylesheets="@../styles/index.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.labs.lab5.ELib.controllers.Index">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>

             <!-- Menu -->
            <MenuBar styleClass="menu">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                      <MenuItem mnemonicParsing="false" text="Add new book" fx:id="fxMenuAddBook" />
                      <MenuItem mnemonicParsing="false" text="Reset filters" fx:id="fxMenuResetFilters" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" text="Exit" fx:id="fxMenuAppExit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Edit the book" fx:id="fxMenuEditBook" />
                        <MenuItem mnemonicParsing="false" text="Remove selected books" fx:id="fxMenuRemoveBook"/>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Help" fx:id="fxMenuHelp" />
                        <MenuItem mnemonicParsing="false" text="About" fx:id="fxMenuAbout" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>

             <!-- Toolbar -->
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" styleClass="toolbar">
               <items>
                  <JFXButton styleClass="toolbar__tool" text="Remove" fx:id="fxToolRemove" />
                  <JFXButton styleClass="toolbar__tool" text="Edit" fx:id="fxToolEdit" />
                  <JFXButton styleClass="toolbar__tool" text="Add" fx:id="fxToolAdd" />
               </items>
            </ToolBar>
         </children></VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.3" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <ScrollPane styleClass="filters" fitToHeight="true" fitToWidth="true" focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT">
                <content>
                <!-- Filters -->
                  <VBox spacing="15.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                               <Label styleClass="filters__title" text="Filters" />
                           </children>
                        </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Name:" />
                             <JFXTextField promptText="The name" styleClass="filterGroup__field" fx:id="fxFilterName" />
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Author:" />
                             <JFXTextField promptText="The author" styleClass="filterGroup__field" fx:id="fxFilterAuthor" />
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Publisher:" />
                             <JFXTextField promptText="The publisher" styleClass="filterGroup__field" fx:id="fxFilterPublisher"/>
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Price:" />
                             <Label styleClass="filterGroup__subtitle" text="From:" />
                           <JFXSlider showTickLabels="true" showTickMarks="true" value="0" fx:id="fxFilterPriceFrom" />
                             <Label styleClass="filterGroup__subtitle" text="To:" />
                           <JFXSlider showTickLabels="true" showTickMarks="true" value="0" fx:id="fxFilterPriceTo" />
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Pages:" fx:id="fxFilterPagesFrom" />
                             <Label styleClass="filterGroup__subtitle" text="From:" />
                             <JFXSlider showTickLabels="true" showTickMarks="true" value="0" />
                             <Label styleClass="filterGroup__subtitle" text="To:" />
                             <JFXSlider showTickLabels="true" showTickMarks="true" value="0" fx:id="fxFilterPagesTo" />
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Date:" />
                             <Label styleClass="filterGroup__subtitle" text="From:" />
                             <JFXDatePicker fx:id="fxFilterDateFrom">
                              <VBox.margin>
                                 <Insets bottom="10.0" />
                              </VBox.margin>
                           </JFXDatePicker>
                             <Label styleClass="filterGroup__subtitle" text="To:" />
                             <JFXDatePicker fx:id="fxFilterDateTo">
                              <padding>
                                 <Insets bottom="10.0" />
                              </padding>
                           </JFXDatePicker>
                         </VBox>
                        <VBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <JFXButton buttonType="RAISED" styleClass="filters__reset" text="Reset filters" fx:id="fxResetFilters" />
                           </children>
                        </VBox>
                     </children>
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
                  </VBox>
                </content>
            </ScrollPane>
            <ScrollPane styleClass="books" fitToWidth="true">
               <content>
                  <VBox>
                     <children>
                        <VBox>
                           <children>
                              <Label styleClass="books__title" text="Books" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <JFXTreeTableView prefHeight="300.0" fx:id="fxBooksTable" />
                              <Label text=" No books with these filters" fx:id="fxNoBooks" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
