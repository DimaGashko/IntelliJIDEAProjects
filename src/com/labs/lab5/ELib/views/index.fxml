<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane focusTraversable="true" styleClass="wrapper" stylesheets="@../styles/index.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.labs.lab5.ELib.controllers.Index">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>

             <!-- Menu -->
            <MenuBar styleClass="menu">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Add new book" />
                        <MenuItem mnemonicParsing="false" text="Edit the book" />
                        <MenuItem mnemonicParsing="false" text="Remove selected books" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Help" />
                        <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>

             <!-- Toolbar -->
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" styleClass="toolbar">
               <items>
                  <JFXButton buttonType="RAISED" styleClass="toolbar__tool" text="Remove" />
                  <JFXButton buttonType="RAISED" styleClass="toolbar__tool" text="Edit" />
                  <JFXButton buttonType="RAISED" styleClass="toolbar__tool" text="Add" />
               </items>
            </ToolBar>
         </children></VBox>
   </top>
   <center>

       <!-- Books -->
      <VBox alignment="CENTER" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
          <content>
          <!-- Filters -->
            <VBox spacing="15.0" styleClass="filters">
               <children>
                   <Label styleClass="filters__title" text="Filters" />
                   <VBox styleClass="filterGroup">
                       <Label styleClass="filterGroup__title" text="Name" />
                       <JFXTextField promptText="The name" styleClass="filterGroup__field" />
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
                   </VBox>
                   <VBox styleClass="filterGroup">
                       <Label styleClass="filterGroup__title" text="Author" />
                       <JFXTextField promptText="The author" styleClass="filterGroup__field" />
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
                   </VBox>
                   <VBox styleClass="filterGroup">
                       <Label styleClass="filterGroup__title" text="Publisher" />
                       <JFXTextField promptText="The publisher" styleClass="filterGroup__field" />
                   </VBox>
                   <VBox styleClass="filterGroup">
                       <Label styleClass="filterGroup__title" text="Price" />
                   </VBox>
               </children>
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            </VBox>
          </content>
      </ScrollPane>
   </left>
</BorderPane>
