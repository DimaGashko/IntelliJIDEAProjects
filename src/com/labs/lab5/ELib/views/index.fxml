<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="wrapper" stylesheets="@../styles/index.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.labs.lab5.ELib.controllers.Index">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>

             <!-- Menu -->
            <MenuBar styleClass="menu">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                      <MenuItem fx:id="fxMenuAddBook" mnemonicParsing="false" onAction="#fxOnActionMenuAddBook" text="Add new book" />
                      <MenuItem fx:id="fxMenuResetFilters" mnemonicParsing="false" onAction="#fxOnActionMenuResetFilters" text="Reset filters" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem fx:id="fxMenuAppExit" mnemonicParsing="false" onAction="#fxOnActionMenuAppExit" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                        <MenuItem fx:id="fxMenuEditBook" mnemonicParsing="false" onAction="#fxOnActionMenuEditBook" text="Edit the book" />
                        <MenuItem fx:id="fxMenuRemoveBooks" mnemonicParsing="false" onAction="#fxOnActionMenuRemoveBooks" text="Remove selected books" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem fx:id="fxMenuHelp" onAction="#fxOnActionMenuHelp" mnemonicParsing="false" text="Help" />
                        <MenuItem fx:id="fxMenuAbout" onAction="#fxOnActionMenuAbout" mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>

             <!-- Toolbar -->
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" styleClass="toolbar">
               <items>
                  <JFXButton fx:id="fxToolRemove" onAction="#fxOnActionToolRemove" styleClass="toolbar__tool" text="Remove" />
                  <JFXButton fx:id="fxToolEdit" onAction="#fxOnActionToolEdit" styleClass="toolbar__tool" text="Edit" />
                  <JFXButton fx:id="fxToolAdd" onAction="#fxOnActionToolAdd" styleClass="toolbar__tool" text="Add" />
               </items>
            </ToolBar>
         </children></VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.3" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" styleClass="filters">
                <content>
                <!-- Filters -->
                  <VBox spacing="15.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                               <Label styleClass="filters__title" text="Filters" />
                           </children>
                        </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Name:" />
                             <JFXTextField fx:id="fxFilterName" onAction="#fxOnActionFilterName" promptText="The name" styleClass="filterGroup__field" />
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Author:" />
                             <JFXTextField fx:id="fxFilterAuthor" onAction="#fxOnActionFilterAuthor" promptText="The author" styleClass="filterGroup__field" />
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Publisher:" />
                             <JFXTextField fx:id="fxFilterPublisher" onAction="#fxOnActionFilterPublisher" promptText="The publisher" styleClass="filterGroup__field" />
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Price:" />
                             <Label styleClass="filterGroup__subtitle" text="From:" />
                           <JFXSlider fx:id="fxFilterPriceFrom" showTickLabels="true" showTickMarks="true" value="0" />
                             <Label styleClass="filterGroup__subtitle" text="To:" />
                           <JFXSlider fx:id="fxFilterPriceTo" showTickLabels="true" showTickMarks="true" value="0" />
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label fx:id="fxFilterPagesFrom" styleClass="filterGroup__title" text="Pages:" />
                             <Label styleClass="filterGroup__subtitle" text="From:" />
                             <JFXSlider showTickLabels="true" showTickMarks="true" value="0" />
                             <Label styleClass="filterGroup__subtitle" text="To:" />
                             <JFXSlider fx:id="fxFilterPagesTo" showTickLabels="true" showTickMarks="true" value="0" />
                         </VBox>
                         <VBox styleClass="filterGroup">
                             <Label styleClass="filterGroup__title" text="Date:" />
                             <Label styleClass="filterGroup__subtitle" text="From:" />
                             <JFXDatePicker fx:id="fxFilterDateFrom" onAction="#fxOnActionFilterDateFrom">
                              <VBox.margin>
                                 <Insets bottom="10.0" />
                              </VBox.margin>
                           </JFXDatePicker>
                             <Label styleClass="filterGroup__subtitle" text="To:" />
                             <JFXDatePicker fx:id="fxFilterDateTo" onAction="#fxOnActionFilterDateTo">
                              <padding>
                                 <Insets bottom="10.0" />
                              </padding>
                           </JFXDatePicker>
                         </VBox>
                        <VBox nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <JFXButton fx:id="fxResetFilters" onAction="#fxOnActionResetFilters" buttonType="RAISED" styleClass="filters__reset" text="Reset filters" />
                           </children>
                        </VBox>
                     </children>
                  <padding>
                     <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                  </padding>
                  </VBox>
                </content>
            </ScrollPane>
            <ScrollPane fitToWidth="true" styleClass="books">
               <content>
                  <VBox>
                     <children>
                        <VBox>
                           <children>
                              <Label styleClass="books__title" text="Books" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <JFXTreeTableView fx:id="fxBooksTable" prefHeight="300.0" />
                              <Label fx:id="fxNoBooks" text=" No books with these filters" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
