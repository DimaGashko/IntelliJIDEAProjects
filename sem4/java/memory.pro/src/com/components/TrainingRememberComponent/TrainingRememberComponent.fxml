<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      stylesheets="@TrainingRememberComponent.css" focusTraversable="true"
      fx:controller="com.components.TrainingRememberComponent.TrainingRememberComponent"
      styleClass="remember-component">

    <VBox>
        <FlowPane fx:id="fxInputsContainer" styleClass="remember-component__inputs"/>
    </VBox>
    <VBox styleClass="remember-component__controls">
        <JFXButton onAction="#onDone" styleClass="remember-component__button" text="Finish">
            <graphic>
                <FontIcon iconLiteral="fa-flag-checkered"/>
            </graphic>
        </JFXButton>
    </VBox>
</VBox>